{
    "compilerOptions": {
        "target": "es2015",
        "module": "es6",
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "removeComments": true,
        "sourceMap": true,
        "listFiles": false,
        "outDir": "./build/src",
        "jsx": "react",
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
          "@triply/facetcheck/build/src/*": ["src/*"]
        }
    },
    "compileOnSave": false,
    "filesGlob": [
      "./src/**/*.ts",
      "./src/**/*.tsx",
      "./config.ts",
      "./bin/*.ts",
      "./ConfigTemplate.ts",
      "./typings/index.d.ts",
      "./typings-custom/main.d.ts",
      "./node_modules/triply-server/src/swagger/standalone.ts",
      "!node_modules/**"
  ]
}
